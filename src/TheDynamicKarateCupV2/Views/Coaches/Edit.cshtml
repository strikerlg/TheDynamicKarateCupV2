@model TheDynamicKarateCupV2.Models.Coach

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit coach</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CoachID" />
        <div class="form-group">
            <label asp-for="CoachFirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CoachFirstName" class="form-control" />
                <span asp-validation-for="CoachFirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CoachName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CoachName" class="form-control" />
                <span asp-validation-for="CoachName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LicenseNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger" />
            </div>
        </div>
        <input type="hidden" asp-for="ClubID" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-clubID="@Model.ClubID">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
