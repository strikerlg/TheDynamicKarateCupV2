@model TheDynamicKarateCupV2.ViewModels.Competitors.CompetitorsViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Competitor</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Competitor.CompetitorFirstname" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Competitor.CompetitorFirstname" class="form-control" />
                <span asp-validation-for="Competitor.CompetitorFirstname" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.CompetitorName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Competitor.CompetitorName" class="form-control" />
                <span asp-validation-for="Competitor.CompetitorName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Competitor.Sex" asp-items="Model.GetSex()"></select>
                <span asp-validation-for="Competitor.Sex" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.AgeCategory" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Competitor.AgeCategory" asp-items="Model.GetAgeCategoryList()"></select>
                <span asp-validation-for="Competitor.AgeCategory" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.LicenseNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Competitor.LicenseNumber" class="form-control" />
                <span asp-validation-for="Competitor.LicenseNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.Level" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Competitor.Level" asp-items="Model.GetLevelList()"></select>
                <span asp-validation-for="Competitor.Level" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Competitor.Disciplines" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Competitor.Disciplines" asp-items="Model.GetSelectedDisciplines()"></select>
                <span asp-validation-for="Competitor.Disciplines" class="text-danger" />
            </div>
        </div>
        <input type="hidden" asp-for="Competitor.ClubID" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
